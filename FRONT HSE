if ($hse_numero_attrezzi_value > 0) {
    echo '<button type="button" onclick="hse_removeLastAttrezzo()" class="hse_remove_attrezzo_btn" style="background: #dc3545; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; font-weight: bold;">âž– Rimuovi Ultimo</button>';
}
echo '</div>';

