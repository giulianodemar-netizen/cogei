                    $hse_warning_text .= ' âœ… (Completo)';
                } else {
                    $warnings = array();
                    if (!$hse_has_formazioni) $warnings[] = 'Formazione';
                    if (!$hse_has_unilav) $warnings[] = 'UNILAV data';
                    if (!$hse_has_unilav_file) $warnings[] = 'UNILAV file';
                    if (!$hse_has_idoneita) $warnings[] = 'IdoneitÃ  data';
                    if (!$hse_has_idoneita_file) $warnings[] = 'IdoneitÃ  file';
