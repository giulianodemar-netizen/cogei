echo '                    </div>';
echo '                </div>';
echo '            </div>';
echo '        `;';
echo '    }';
echo '    ';
echo '    document.getElementById("mezzo-details-content").innerHTML = content;';
echo '    modal.style.display = "block";';
echo '}';
echo '';
echo 'function closeMezzoDetailsModal() {';
echo '    document.getElementById("mezzo-details-modal").style.display = "none";';
echo '}';
echo '';
echo '// ================== LOG DELETION FUNCTIONS ==================';
echo '';
echo 'function toggleAllLogs(checked) {';
echo '    const checkboxes = document.querySelectorAll(\'.log-checkbox\');';
echo '    checkboxes.forEach(function(cb) {';
echo '        cb.checked = checked;';
echo '    });';
echo '    updateSelectedCount();';
echo '}';
echo '';
echo 'function updateSelectedCount() {';
echo '    const checkboxes = document.querySelectorAll(\'.log-checkbox:checked\');';
echo '    const count = checkboxes.length;';
echo '    const countSpan = document.getElementById(\'selected-count\');';
echo '    const selectAllCheckbox = document.getElementById(\'select-all-logs\');';
echo '    ';
echo '    if (countSpan) {';
echo '        if (count > 0) {';
echo '            countSpan.textContent = \'(\' + count + \' selezionat\' + (count === 1 ? \'a\' : \'e\') + \')\';';
echo '            countSpan.style.fontWeight = \'bold\';';
echo '            countSpan.style.color = \'#dc3545\';';
echo '        } else {';
echo '            countSpan.textContent = \'\';';
echo '        }';
echo '    }';
echo '    ';
echo '    // Update select all checkbox state';
echo '    const allCheckboxes = document.querySelectorAll(\'.log-checkbox\');';
echo '    if (selectAllCheckbox && allCheckboxes.length > 0) {';
echo '        selectAllCheckbox.checked = count === allCheckboxes.length;';
echo '    }';
echo '}';
echo '';
echo 'function confirmLogDeletion() {';
echo '    const checkboxes = document.querySelectorAll(\'.log-checkbox:checked\');';
echo '    if (checkboxes.length === 0) {';
echo '        alert(\'âš ï¸ Seleziona almeno una voce da eliminare\');';
echo '        return false;';
echo '    }';
echo '    ';
echo '    return confirm(\'Confermi di voler eliminare \' + checkboxes.length + \' \' + (checkboxes.length === 1 ? \'voce\' : \'voci\') + \' dal log?\\n\\nQuesta azione non puÃ² essere annullata.\');';
echo '}';
echo '';
echo 'function deleteAllLogs() {';
echo '    // Select all checkboxes';
echo '    const checkboxes = document.querySelectorAll(\'.log-checkbox\');';
echo '    checkboxes.forEach(function(cb) {';
echo '        cb.checked = true;';
echo '    });';
echo '    ';
echo '    // Submit the form';
echo '    document.getElementById(\'log-delete-form\').submit();';
echo '}';
echo '</script>';
