echo '<strong>Stato Email:</strong> ' . ($inviamail ? '<span style="color: #28a745;">ATTIVE - Le email vengono inviate</span>' : '<span style="color: #856404;">DISATTIVATE - Solo log (cambia $inviamail = true per attivare)</span>');
echo '</div>';

// ================== RIEPILOGO MODIFICHE RECENTI HSE ==================

// Function to get recent HSE updates with detailed change tracking
function getRecentHseUpdates() {
    global $wpdb;
    
    // Get updates from last 48 hours based on user meta storing logged changes
    $cutoff_timestamp = strtotime('-48 hours');
    
    $recent_updates = [];
    
    // Get all users with recent hse_recent_changes meta
    $users = get_users([
        'role' => 'subscriber',
        'meta_query' => [
            [
                'key' => 'hse_recent_changes',
                'compare' => 'EXISTS'
            ]
        ]
    ]);
    
    foreach ($users as $user) {
        $user_id = $user->ID;
        $rag_soc = get_user_meta($user_id, 'user_registration_rag_soc', true);
        
        // Get stored changes
        $stored_changes = get_user_meta($user_id, 'hse_recent_changes', true);
        
        if (!is_array($stored_changes)) {
            continue;
        }
        
        // Filter changes within the last 48 hours
        $filtered_changes = [];
        foreach ($stored_changes as $change) {
            if (!isset($change['timestamp'])) continue;
            
            $change_timestamp = is_numeric($change['timestamp']) ? $change['timestamp'] : strtotime($change['timestamp']);
            
            if ($change_timestamp >= $cutoff_timestamp) {
                $filtered_changes[] = $change;
            }
        }
        
        if (!empty($filtered_changes)) {
            // Sort by timestamp descending
            usort($filtered_changes, function($a, $b) {
                $a_time = is_numeric($a['timestamp']) ? $a['timestamp'] : strtotime($a['timestamp']);
                $b_time = is_numeric($b['timestamp']) ? $b['timestamp'] : strtotime($b['timestamp']);
                return $b_time - $a_time;
            });
            
            $recent_updates[] = [
                'user_id' => $user_id,
                'rag_soc' => $rag_soc ?: $user->display_name,
                'email' => $user->user_email,
                'timestamp' => is_numeric($filtered_changes[0]['timestamp']) ? $filtered_changes[0]['timestamp'] : strtotime($filtered_changes[0]['timestamp']),
                'changes' => $filtered_changes
            ];
        }
    }
    
    // Sort by timestamp descending
    usort($recent_updates, function($a, $b) {
        $a_time = is_numeric($a['timestamp']) ? $a['timestamp'] : strtotime($a['timestamp']);
        $b_time = is_numeric($b['timestamp']) ? $b['timestamp'] : strtotime($b['timestamp']);
        return $b_time - $a_time;
    });
    
    return $recent_updates;
}

$recent_hse_updates = getRecentHseUpdates();

// Add JavaScript function for accordion BEFORE the HTML that uses it
?>
<script>
function toggleHseUpdatesAccordion() {
    const content = document.getElementById('hse-updates-content');
    const arrow = document.getElementById('hse-accordion-arrow');
    
    if (content.style.display === 'none' || content.style.display === '') {
        content.style.display = 'block';
        arrow.style.transform = 'rotate(180deg)';
    } else {
        content.style.display = 'none';
        arrow.style.transform = 'rotate(0deg)';
    }
}
</script>
<?php

if (!empty($recent_hse_updates)) {
    echo '<div style="background: #d1ecf1; border: 1px solid #17a2b8; border-radius: 8px; margin-bottom: 20px; border-left: 5px solid #17a2b8; overflow: hidden;">';
    
    // Accordion Header (clickable)
    echo '<div onclick="toggleHseUpdatesAccordion()" style="background: rgba(23, 162, 184, 0.15); padding: 15px 20px; cursor: pointer; user-select: none; border-bottom: 1px solid #17a2b8;" onmouseover="this.style.background=\'rgba(23, 162, 184, 0.25)\'" onmouseout="this.style.background=\'rgba(23, 162, 184, 0.15)\'">';
    echo '<h3 style="color: #0c5460; margin: 0; display: flex; align-items: center; justify-content: space-between;">';
    echo '<span>ðŸ“¢ Aggiornamenti Recenti HSE (ultime 48 ore) <span style="background: #17a2b8; color: white; padding: 2px 8px; border-radius: 12px; font-size: 12px; margin-left: 10px;">' . count($recent_hse_updates) . ' aggiornamenti</span></span>';
    echo '<span id="hse-accordion-arrow" style="font-size: 16px; transition: transform 0.3s ease;">â–¼</span>';
    echo '</h3>';
    echo '</div>';
    
    // Accordion Content (initially collapsed)
    echo '<div id="hse-updates-content" style="display: none; padding: 20px;">';
    echo '<div style="display: grid; gap: 15px;">';
    foreach ($recent_hse_updates as $update) {
        echo '<div style="background: #e7f3ff; border: 1px solid #0066a2; border-radius: 6px; padding: 15px; border-left: 4px solid #0066a2;">';
        echo '<div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 8px;">';
        echo '<div>';
        echo '<strong style="color: #004085; font-size: 14px;">ðŸ¢ ' . htmlspecialchars($update['rag_soc']) . '</strong>';
        echo '<div style="font-size: 12px; color: #6c757d; margin-top: 2px;">';
        echo '<strong>ID:</strong> ' . $update['user_id'] . ' | ';
        echo '<strong>Email:</strong> ' . htmlspecialchars($update['email']);
        echo '</div>';
        echo '</div>';
        echo '<span style="background: #17a2b8; color: white; padding: 2px 6px; border-radius: 10px; font-size: 10px;">ðŸ•’ ' . date('d/m/Y H:i', $update['timestamp']) . '</span>';
        echo '</div>';
        
        echo '<div style="margin-top: 10px;">';
        echo '<strong style="color: #004085; font-size: 12px;">ðŸ“ Modifiche effettuate:</strong>';
        echo '<div style="margin-top: 5px; font-size: 11px; line-height: 1.6;">';
        
        foreach ($update['changes'] as $change) {
            $field_label = isset($change['field']) ? htmlspecialchars($change['field']) : 'Campo';
            $change_type = isset($change['type']) ? $change['type'] : 'update';
            
            echo '<div style="background: rgba(0,102,162,0.1); padding: 8px; margin: 4px 0; border-radius: 3px; border-left: 3px solid #0066a2;">';
            
            if ($change_type === 'new') {
                // New record added
                echo '<div style="color: #004085; font-weight: bold; margin-bottom: 4px;">âž• ' . $field_label . ' - Nuovo elemento aggiunto</div>';
                if (isset($change['new_value'])) {
                    echo '<div style="color: #155724; margin-left: 20px;">â–¸ ' . htmlspecialchars($change['new_value']) . '</div>';
                }
            } elseif ($change_type === 'update') {
                // Field updated
                echo '<div style="color: #004085; font-weight: bold; margin-bottom: 4px;">âœï¸ ' . $field_label . '</div>';
                
                if (isset($change['old_value']) && isset($change['new_value'])) {
                    echo '<div style="margin-left: 20px;">';
                    echo '<div style="color: #856404; text-decoration: line-through;">âŠ– Era: ' . htmlspecialchars($change['old_value']) . '</div>';
                    echo '<div style="color: #155724; font-weight: bold;">âŠ• Ora: ' . htmlspecialchars($change['new_value']) . '</div>';
                    echo '</div>';
                } elseif (isset($change['new_value'])) {
                    echo '<div style="color: #155724; margin-left: 20px;">â–¸ ' . htmlspecialchars($change['new_value']) . '</div>';
                }
            } elseif ($change_type === 'file') {
                // File uploaded
                echo '<div style="color: #004085; font-weight: bold; margin-bottom: 4px;">ðŸ“Ž ' . $field_label . ' - File caricato/aggiornato</div>';
                if (isset($change['filename'])) {
                    echo '<div style="color: #155724; margin-left: 20px;">ðŸ“„ ' . htmlspecialchars($change['filename']) . '</div>';
                }
            } else {
                // Generic change
                echo '<div style="color: #004085;">â€¢ ' . htmlspecialchars($change['description'] ?? $field_label) . '</div>';
            }
            
            echo '</div>';
        }
        
        echo '</div>';
        echo '</div>';
        echo '</div>';
    }
    echo '</div>';
    
    echo '<div style="margin-top: 15px; padding: 10px; background: rgba(23,162,184,0.1); border-radius: 4px; font-size: 12px; color: #0c5460;">';
    echo '<strong>â„¹ï¸ Nota:</strong> Questi sono gli aggiornamenti effettuati dagli utenti HSE nelle ultime 48 ore. ';
    echo 'Per ogni modifica Ã¨ stata inviata una notifica email all\'amministratore (hse@cogei.net).';
    echo '</div>';
    
    echo '</div>'; // Close accordion content
    echo '</div>'; // Close accordion container
} else {
    echo '<div style="background: #d4edda; border: 1px solid #28a745; border-radius: 8px; padding: 15px; margin-bottom: 20px; border-left: 5px solid #28a745;">';
    echo '<h4 style="color: #155724; margin: 0; display: flex; align-items: center;">âœ… Nessun Aggiornamento Recente</h4>';
    echo '<p style="margin: 8px 0 0 0; font-size: 14px; color: #155724;">Non ci sono aggiornamenti HSE nelle ultime 48 ore.</p>';
    echo '</div>';
